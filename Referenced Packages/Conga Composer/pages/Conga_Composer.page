<apex:page controller="APXTConga4.ComposerPageController"
    showHeader="{!showHeader}"
    sidebar="{!showSidebar}"
    standardStylesheets="false"
    applyBodyTag="false">
    <body>
        <!-- Canvas Object -->
        <apex:canvasApp namespacePrefix="APXTConga4" 
        developerName="Conga_Composer"
        height="{!pageHeight}px" width="100%"
        border="0" scrolling="no"
        onCanvasAppError="done"
        onCanvasAppLoad="done"
        parameters="{!Parameters}" />
        <!-- Custom Loading splash screen -->
        <apex:includeScript value="https://composer.congamerge.com/apxtlibraryjs/apxt-bootstrapper.js"/>
        <script>
            var cnvs = null;
            function hideLdr(){
                cnvs.style.display = 'none';
            };
            function done(){
                apxt.Mask.hide();
                cnvs.style.display = '';
            };
            Sfdc.onReady(function () {
                try {
                    cnvs = document.getElementById('j_id0:j_id2:canvasapp:container').parentNode;
                    hideLdr();
                    apxt.Mask.show({
                        target: cnvs.parentNode
                        , msg: 'Loading Conga'
                        , autoSize: true
                    });
                    setTimeout(hideLdr,10);
                    setTimeout(hideLdr,50);
                    setTimeout(hideLdr,100);
                } catch (ex) {
                    console.log(ex);
                }
            });
        </script>
    </body>
</apex:page>